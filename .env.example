# 新闻收集配置
NEWS_API_BASE_URL=http://localhost:3000
NEWS_MAX_PER_SOURCE=5
NEWS_TOTAL_LIMIT=20

# 定时任务配置
SCHEDULER_ENABLED=true
# Cron表达式: 秒 分 时 日 月 周
# 例如: "0 0 8 * * *" 表示每天8点
# 例如: "0 0 8,12,18 * * *" 表示每天8点、12点、18点
SCHEDULER_CRON=0 0 8 * * *

# 飞书机器人配置
LARK_BOT_ENABLED=true
LARK_BOT_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/your-webhook-url
LARK_BOT_SECRET=your-secret-key

# LLM配置（火山引擎豆包）
LLM_ENABLED=true
LLM_API_KEY=your-doubao-api-key
LLM_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
LLM_MODEL=ep-20241220143914-xxxxx

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/scheduler.log

# 数据存储配置
DATA_DIR=./data
CACHE_DURATION=3600000

# 错误重试配置
RETRY_ATTEMPTS=3
RETRY_DELAY=5000